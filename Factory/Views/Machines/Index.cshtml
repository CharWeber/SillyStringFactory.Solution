@{
  Layout="_Layout";
}
@using Factory.Models

<h1>Machines</h1>

@if(Model.Count == 0)
{
  <p>Gotta build a machine. Maybe a roomba?</p>
}

@foreach (Machine machine in Model)
{
  @Html.ActionLink($"{machine.Name}", "Details", new {id = machine.MachineId})<br>
}

<p>@Html.ActionLink("Build Machine", "Create", "Machines")</p>